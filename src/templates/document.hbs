<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>

    <!-- We inject compiled Tailwind CSS here -->
    <style>
      {{{tailwindCss}}}
    </style>
  </head>

  <body>
    <div class='flex min-h-screen font-sans'>
      <aside class='bg-pink-500 text-white flex flex-col items-center py-10'>
        <div class='mb-8'>
          <h2 class='text-xl font-bold'>My Company</h2>
        </div>
        <nav class='flex flex-col space-y-4'>
          <a href='#' class='text-sm hover:underline'>Home</a>
          <a href='#' class='text-sm hover:underline'>About</a>
          <a href='#' class='text-sm hover:underline'>Services</a>
          <a href='#' class='text-sm hover:underline'>Contact</a>
        </nav>
      </aside>
      <main class='px-12 py-10 bg-white text-slate-900'>
        <header class='flex items-start justify-between border-b pb-6'>
          <div>
            <h1 class='text-3xl font-bold tracking-tight'>{{title}}</h1>
            <p class='mt-1 text-sm text-slate-500'>{{subtitle}}</p>
          </div>

          <div class='text-right'>
            <div class='text-sm text-slate-500'>Date</div>
            <div class='text-sm font-semibold'>{{date}}</div>
          </div>
        </header>

        <section class='mt-8'>
          <h2 class='text-lg font-semibold'>Summary</h2>
          <p class='mt-2 text-sm leading-6 text-slate-700'>
            {{summary}}
          </p>
        </section>

        <section class='mt-8'>
          <h2 class='text-lg font-semibold'>Items</h2>

          <div class='mt-3 overflow-hidden rounded-xl border'>
            <table class='w-full text-sm'>
              <thead class='bg-slate-50 text-slate-600'>
                <tr>
                  <th class='px-4 py-3 text-left font-medium'>Description</th>
                  <th class='px-4 py-3 text-right font-medium'>Amount</th>
                </tr>
              </thead>
              <tbody>
                {{#each items}}
                  <tr class='border-t'>
                    <td class='px-4 py-3'>{{this.description}}</td>
                    <td class='px-4 py-3 text-right'>{{this.amount}}</td>
                  </tr>
                {{/each}}
              </tbody>
            </table>
          </div>

          <div class='mt-4 flex justify-end'>
            <div class='w-64 rounded-xl border p-4'>
              <div class='flex justify-between text-sm'>
                <span class='text-slate-600'>Total</span>
                <span class='font-semibold'>{{total}}</span>
              </div>
            </div>
          </div>
        </section>

        <footer class='mt-10 border-t pt-6 text-xs text-slate-500'>
          Generated by Node + TypeScript + Tailwind.
        </footer>
      </main>
    </div>
  </body>
</html>